<Window x:Class="CSGOConfigBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CSGO Config Generator" Height="350" Width="575">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btn_CreateNewConfig" Content="Create New Config&#xD;&#xA;" HorizontalAlignment="Left" Margin="263,146,0,0" VerticalAlignment="Top" Width="142" Click="CreateNewConfig_Click" Height="23" Grid.Column="2"/>
        <Button x:Name="btnFindConfig" Content="Search" HorizontalAlignment="Left" Margin="209,52,0,0" VerticalAlignment="Top" Width="128" Click="FindConfig_Click" Height="23" Grid.Column="2"/>
        <TextBox x:Name="txtConfigDir" HorizontalAlignment="Left" Height="23" Margin="10,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="334" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Label x:Name="lblFindDir" Content="Please select your Autoexec.cfg" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="185" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
